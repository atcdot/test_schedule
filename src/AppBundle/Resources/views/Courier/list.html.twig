{% extends '::base.html.twig' %}
{% block content %}
    <h3>Список курьеров</h3>
    <div class="row">
        <div class="col-md-12 controls">
            <a href="{{ path('courier_create') }}" class="btn btn-default flex-right">Добавить курьера</a>
        </div>
    </div>
    <table class="table center table-bordered dataTables">
        <thead>
        <tr>
            <th>№</th>
            <th>Полное имя</th>
        </tr>
        </thead>
        <tbody>
        {% for courier in couriers %}
            <tr>
                <td>{{ courier.id }}</td>
                <td>{{ courier.fullName }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}